{
  "packages": [
    "github.com/graniticio/granitic/ws",
    "some/package/logic"
  ],
  "templates": {

    "PrivateHandler": {
      "ct": "Handler",
      "RequireAuthentication": true
    },

    "PublicHandler": {
      "compTemplate": "Handler",
      "RequireAuthentication": false
    },

    "Handler":{
      "t": "ws.WsHandler"
    }
  },

  "components": {

    "LoginHandler": {
      "compTemplate": "PublicHandler",
      "PasswordManager": "ref:AuthManager",
      "SavePassword": false,
      "LoginBanner": "c:messages.login.welcome"
    },

    "AccountHandler": {
      "compTemplate": "PrivateHandler",
      "SessionTimeoutSeconds": 10

    },

    "AuthManager": {
      "t": "logic.PassMan",
      "Seed": 1.091223,
      "DataSourceURL": "conf:externals.passwords"
    }

  }
}